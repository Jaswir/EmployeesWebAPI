@model List<EmployeesWebAPI.Models.Domain.Employee>
@{

}

<h1>Employees</h1>

<form method="post" class="mt-5">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Salary</th>
                <th>Date Of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Department</td>
                    <td>@employee.Salary</td>
                    <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                    <td><a href="Employees/Edit/@employee.Id" class="btn btn-primary">Edit</a></td>    
                    <td>
                        <button type="submit" class="btn btn-danger"
                            asp-controller="Employees"
                            asp-action="Delete"
                            asp-route-id="@employee.Id"
                        >Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
<a class="btn btn-primary btn-sm" href="/Employees/Add">Add Employee</a>
